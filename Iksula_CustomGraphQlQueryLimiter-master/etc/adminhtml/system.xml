<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="iksula" sortOrder="999" translate="label">
            <label>Iksula</label>
        </tab>
        <section id="graphql_query_limiter" translate="label" sortOrder="342" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Iksula CustomGraphQlQueryLimiter</label>
            <tab>iksula</tab>
            <resource>Iksula_CustomGraphQlQueryLimiter::config</resource>
            <group id="settings" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Settings</label>
                <field id="query_depth" type="text" translate="label" sortOrder="23" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Query Depth</label>
                    <comment>Default: 20</comment>
                </field>
                <field id="query_complexity" type="text" translate="label" sortOrder="23" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Query Complexity</label>
                    <comment>Default: 300</comment>
                </field>
            </group>
        </section>
    </system>
</config>
